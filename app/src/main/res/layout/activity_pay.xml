<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingRight="15dp"
    android:paddingLeft="15dp"
    android:background="@color/White"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:padding="2dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/timeO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="00:00"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25dp"
            tools:text="Time" />

        <Button
            android:id="@+id/timeD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:layout_margin="2dp"
            android:background="@drawable/buttonshape"
            android:text="set time"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25dp" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:id="@+id/orderGet"
        android:textColor="@color/colorBlack"
        android:text="Подача заказа :"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:paddingBottom="5dp"
        android:id="@+id/spinRes"
        android:background="@drawable/buttonshape" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="20dp"
        android:id="@+id/placeChoose"
        android:textSize="18dp"
        android:text="Выберите меcто :"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingBottom="5dp"
        android:paddingRight="5dp"
        android:background="@drawable/buttonshape"
        android:id="@+id/spinResO"
        android:layout_marginTop="20dp"/>

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:paddingBottom="5dp"
        android:id="@+id/mapB"
        android:scaleType="centerInside"
        android:background="@drawable/maps_icon"
        android:layout_gravity="bottom"
        android:textColor="@color/colorPrimaryDark"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="35dp">
        <TextView
            android:id="@+id/fullPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Общая стоимость :"
            android:textSize="18dp"
            android:textColor="@color/colorBlack"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/priceO"
            tools:text="Price"
            android:text="300$"
            android:layout_alignParentTop="true"
            android:textSize="60dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>


    </RelativeLayout>

    <include
        android:id="@+id/googlepay_button"
        layout="@layout/googlepay_button"
        android:layout_width="220dp"
        android:layout_height="80dp"
        android:visibility="visible"
        android:layout_gravity="end"
        android:layout_marginTop="230dp"/>



</LinearLayout>